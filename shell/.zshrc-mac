###
# @mathcale's ZSH wizardry
###

# Oh My ZSH configs
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="spaceship"
plugins=(git wd history npm sublime sudo vscode yarn)

source $ZSH/oh-my-zsh.sh

# Default terminal text editor
export EDITOR="vim"

# SDKMan
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

# thefuck
eval $(thefuck --alias)

# Go
export GOPATH=$HOME/go-workspace
export GOROOT=/usr/local/opt/go/libexec
#export GOARC=Hamd64
#export GOOS=linux
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin

# Localstack
export DATA_DIR=/tmp/localstack/data
export DYNAMO_ENDPOINT=http://localhost:8000

# Android
export ANDROID_HOME=$HOME/Library/Android/Sdk
export PATH=$PATH:$HOME/Library/Android/Sdk/emulator
export PATH=$PATH:$HOME/Library/Android/Sdk/tools
export PATH=$PATH:$HOME/Library/Android/Sdk/platform-tools
alias run-android="cd $HOME/Library/Android/sdk/emulator && ./emulator @oreo27 -camera-front webcam1 -camera-back webcam1 && cd -"

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# React Native
export REACT_EDITOR=code

# Python executables
export PATH=$PATH:$HOME/Library/Python/2.7/bin

# Aliases
alias topo=htop
alias dcu="docker-compose up"
alias dcd="docker-compose down"

# Disable AWS SAM CLI telemetry
export SAM_CLI_TELEMETRY=0

# Yarn binaries
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

# Local scripts
export PATH=$PATH:$HOME/.local/bin

# Java
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

# Added by serverless binary installer
export PATH="$HOME/.serverless/bin:$PATH"

# Deta
export PATH="/Users/matheus.calegaro/.deta/bin:$PATH"

# NeoVim
alias vim=nvim
alias vi=nvim

# Shell alternatives configs
export BAT_THEME="Dracula"
alias cat=bat
alias d=docker
alias ls="exa --icons --color auto"

