{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent_workspaces": {
      "*": 4
    }
  },
  "hyprland/window": {
    "format": "{title}",
    "separate-outputs": true
  },
  "custom/cliphist": {
    "format": "",
    "on-click": "sleep 0.1 && ~/dotfiles/arch/scripts/cliphist.sh",
    "on-click-right": "sleep 0.1 && ~/dotfiles/arch/scripts/cliphist.sh d",
    "on-click-middle": "sleep 0.1 && ~/dotfiles/arch/scripts/cliphist.sh w",
    "tooltip": false
  },
  "custom/appmenu": {
    "format": "Apps",
    "on-click": "~/dotfiles/arch/scripts/applauncher.sh",
    "tooltip": false
  },
  "custom/whoami": {
    "format": "",
    "on-click": "wlogout",
    "tooltip": false
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "clock": {
    "timezone": "America/Sao_Paulo",
    "tooltip-format": "<big>{:%A}</big>\n<tt><small>{calendar}</small></tt>",
    "format": " {:%d/%m/%Y %H:%M}"
  },
  "network": {
    "format": "{ifname}",
    "format-ethernet": " {bandwidthDownBytes}  {bandwidthUpBytes}",
    "format-disconnected": " Disconnected",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-ethernet": " {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": " Disconnected",
    "max-length": 50,
    "interval": 2
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume}%",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", " ", " "]
    },
    "on-click": "pavucontrol"
  },
  "bluetooth": {
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager"
  }
}
